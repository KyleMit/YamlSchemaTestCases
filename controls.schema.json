{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",

  "properties": {

    "controlType": {
      "type": "string",
      "enum": ["button", "dropdown"]
    },
    "options": {
      "type": "array",
      "items": {"type": "string"}
    }
    
  },
    
  "required": ["controlType"],

  "oneOf": [
    {
      "properties": {
        "controlType": {"const": "dropdown"}
      },
      "required": ["options"]
    },
    {
      "properties": {
        "controlType": {"const": "button"}
      }
    }

  ]

}