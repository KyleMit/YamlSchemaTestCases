{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",

  "properties": {

    "controlType": {
      "type": "string",
      "enum": ["button", "dropdown"]
    }
    
  },
    
  "required": ["controlType"],

  "if": {
    "properties": {
      "controlType": {"const": "dropdown"}
    }
  },
  "then": {
    "properties": {
      "options": {
        "type": "array",
        "items": {"type": "string"}
      }
    }
  }

}